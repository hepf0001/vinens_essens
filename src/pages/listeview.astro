---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import ListeviewCard from "../components/ListeviewCard.astro";

const cards = [
  {
    position: 1,
    image: "/red_card1.webp",
    label: "6 stk",
    extralabel: "Mest populær!",
    title: "Rødvinskasse",
    description: "Seks nøje udvalgte rødvine, der tager dig med på en smagsrejse gennem forskellige regioner og druesorter.",
    price: "349 DKK",
    buttonText: "Læs mere",
  },
  {
    image: "/white_card1.webp",
    label: "3 stk",
    title: "Hvidvinskasse",
    description: "Tre udvalgte hvidvine, der forener friskhed, kompleksitet og elegance.",
    price: "349 DKK",
    buttonText: "Læs mere",
  },
  {
    image: "/mixed_card1.webp",
    label: "3 stk",
    title: "Blandet kasse",
    description: "En eksklusiv kollektion af rød- og hvidvine, der tilbyder en smagsrejse fra fyldige til friske nuancer. ",
    price: "349 DKK",
    buttonText: "Læs mere",
  },
  {
    image: "/red_card2.webp",
    label: "3 stk",
    title: "Rødvinskasse",
    description: "Tre udsøgte rødvine, der tager dig med på en smagsrejse gennem forskellige regioner og druesorter.",
    price: "349 DKK",
    buttonText: "Læs mere",
  },
  {
    image: "/white_card2.webp",
    label: "3 stk",
    title: "Hvidvinskasse",
    description: "Tre hvidvine, der forener friskhed, kompleksitet og elegance.",
    price: "349 DKK",
    buttonText: "Læs mere",
  },
  {
    image: "/mixed_card2.webp",
    label: "3 stk",
    title: "Blandet kasse",
    description: "En kollektion af rød- og hvidvine, der tilbyder en smagsrejse fra fyldige til friske nuancer. ",
    price: "349 DKK",
    buttonText: "Læs mere",
  },
];
---

<MainLayout title="Vinkasser">
  <section class="max-w-7xl mx-auto md:p-0 p-8">
    <section class="grid md:grid-cols-12 gap-gap pb-mobil-bottom md:pb-desktop-bottom pt-mobil-top md:pt-desktop-top">
      {/* Map over the cards */}
      {
        cards.map((card) => (
          <ListeviewCard
            key={card.position}
            image={card.image}
            label={card.label}
            extralabel={card.position === 1 ? card.extralabel : null}
            title={card.title}
            description={card.description}
            price={card.price}
            buttonText={card.buttonText}
          />
        ))
      }
    </section>
  </section>
</MainLayout>
